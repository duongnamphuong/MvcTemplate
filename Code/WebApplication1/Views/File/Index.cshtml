@using System.IO;
@{
    FileInfo[] Files = ViewBag.Files;
    int cnt = 0;
}
@if (Files != null && Files.Length > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">@Resources.Resource.File_name</th>
                <th scope="col">@Resources.Resource.Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in Files)
            {
                <tr>
                    <th scope="row">@(++cnt)</th>
                    <td>@f.Name</td>
                    <td>
                        <a href="@Url.Action("download", new { name = f.Name })" class="fas fa-download"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}