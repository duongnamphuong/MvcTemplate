@{
    ViewBag.Title = Resources.Resource.Login;
}
@section scripts {
    <!--Opentip-->
    <script type="text/javascript">
        var tip1 = '<span style="color:#007bff;">Login button</br><b>Opentip example</b></span>';
        new Opentip('#login-btn', tip1, { tipJoint: 'top', background: '#ff8400', borderColor: '#000000' });
    </script>
}
<h1>@ViewBag.Title</h1>
<form action="@Url.Action("Index", "Login")" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">@Resources.Resource.Email_Address</label>
        <input type="text" class="form-control" id="exampleInputEmail1" name="username" />
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">@Resources.Resource.Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" name="password">
    </div>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1" name="check">
        <label class="form-check-label" for="exampleCheck1">@Resources.Resource.Remember_me<span class="c-notes">@Resources.Resource.Not_yet_implemented</span></label>
    </div>
    <div class="form-group">
        <button id="login-btn" type="submit" class="btn btn-primary">@Resources.Resource.Login</button>
    </div>
</form>
<div>
    <span>@Resources.Resource.No_account_part_1@Html.ActionLink(Resources.Resource.No_account_part_2, "Register", "Login")@Resources.Resource.No_account_part_3</span>
</div>